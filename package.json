{
  "name": "clickmeter",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm -ws --if-present run build",
    "typecheck": "npm -ws --if-present run typecheck",
    "dev": "npm -w @clickmeter/server run dev",
    "migrate": "bash ./scripts/migrate.sh",
    "selftest": "bash ./scripts/selftest.sh"
  },
  "devDependencies": {
    "@tsonic/aspnetcore": "10.0.25",
    "@tsonic/core": "10.0.25",
    "@tsonic/dotnet": "10.0.25",
    "@tsonic/efcore": "10.0.25",
    "@tsonic/efcore-sqlite": "10.0.25",
    "@tsonic/globals": "10.0.25",
    "@tsonic/microsoft-extensions": "10.0.25",
    "dotenv": "^16.4.7",
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7",
    "tsonic": "0.0.54",
    "typescript": "5.9.2"
  }
}
